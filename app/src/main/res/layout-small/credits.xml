<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/menu_body"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:layoutDirection="rtl">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingTop="@dimen/appbar_padding_top"
        android:background="@drawable/background_actionbar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/Credits"
            app:titleTextColor="@color/md_black_1000"
            app:titleTextAppearance="@style/TextAppearance.Small"
            android:layout_gravity="right"
            android:gravity="right">
            <ImageView
                android:id="@+id/BesparinaLogo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/logo_toolbar"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                tools:ignore="RtlHardcoded" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/appbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/LinearMinCredit">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TopValueCredits"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvRecentCredits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/RecentCredit"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#468748"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/tvRecentCreditsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="0"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TopValueCreditsIncrise"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTitleIncriseCredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/CurrencyInsertCredit"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#468748"
                    android:layout_marginBottom="10dp"/>
                <EditText
                    android:id="@+id/etCurrencyInsertCredit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:inputType="number"
                    android:text="0"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:id="@+id/tvOne"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:id="@+id/tvTwo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:id="@+id/tvThree"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LinearIncreseCredite">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/btnIncresCredit"
                    android:background="@drawable/rounded_button_signin"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/cash"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:drawableRight="@drawable/catch_money_small" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LinearIncreseEtebar"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTitleIncriseEtebar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/CrediteCode"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/etCurrencyInsertEtebar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:text="0"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#468748"
                    android:layout_marginBottom="10dp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/btnIncreseEtebar"
                    android:background="@drawable/rounded_button_signin"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/RechargeCredit"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/credite_code_small" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LinearIncreseEtebar">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/btnCreditHistory"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/Credits_History"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:textSize="10sp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/rounded_button_transparent"
                    android:drawableRight="@drawable/list_small" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="10sp"
            android:id="@+id/btnOrderBottom"
            android:background="@drawable/rounded_button_bottom"
            android:textColor="#052d93"
            android:drawableTop="@drawable/jobs_small"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnAcceptOrderBottom"
            android:background="@drawable/rounded_button_bottom"
            android:textColor="#052d93"
            android:textSize="10sp"
            android:drawableTop="@drawable/dutys_small"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btncrediteBottom"
            android:background="@drawable/rounded_button_bottom"
            android:textColor="#052d93"
            android:textSize="10sp"
            android:drawableTop="@drawable/credits_small"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnServiceEmergency"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="10sp"
            android:background="@drawable/rounded_button_bottom"
            android:textColor="#93050a"
            android:drawableTop="@drawable/emergency_small"
            android:layout_weight="1">
        </Button>
    </LinearLayout>
</RelativeLayout>

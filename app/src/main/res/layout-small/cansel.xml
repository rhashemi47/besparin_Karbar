<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/menu_body"
    android:layoutDirection="rtl"
    android:layout_gravity="center"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/LinerQustionCansel">
        <TextView
            android:id="@+id/tvTextCanselQuastion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/CaseForCansel"
            android:textSize="10sp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinerQustionCansel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_layout_text_message"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:text="@string/Do_not_go_all_the_way"/>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:text="@string/Refused_hamyar"/>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:text="@string/disagreement_Hamyar"/>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:text="@string/The_cost_of_service_is_high"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="10sp"
                    android:text="@string/Other_reasons"/>
                <EditText
                    android:id="@+id/etCansel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rounded_edittext2"
                    android:inputType="text|textMultiLine"
                    android:gravity="top|right"
                    android:textAlignment="gravity"
                    android:textSize="10sp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    tools:ignore="RtlHardcoded"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
